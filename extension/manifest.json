{
    "manifest_version": 3,
    "name": "Web Security Layer",
    "version": "1.0",
    "description": "Continuous structural and behavioral analysis engine.",
    "permissions": [
        "activeTab",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "http://127.0.0.1:5000/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "whitelist.js",
                "content.js",
                "alert_ui.js"
            ],
            "css": [
                "alert_ui.css"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "clickjacking-detector@example.com"
        }
    }
}